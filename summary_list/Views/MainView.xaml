<UserControl x:Class="summary_list.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:summary_list.Views"
             xmlns:converters="clr-namespace:summary_list.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:CheckToColorConverter x:Key="CheckToColorConverter"/>
        <converters:WidthToColumnsConverter x:Key="WidthToColumnsConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </UserControl.Resources>
    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="{Binding Title}" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="10"
                   Foreground="White"/>
        
        <ItemsControl Grid.Row="1" 
                      ItemsSource="{Binding CurrentPageItems}"
                      Margin="10">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="200" 
                            Height="40" 
                            Margin="5" 
                            BorderBrush="#FF3E3E3E" 
                            BorderThickness="1"
                            Background="{Binding IsChecked, Converter={StaticResource BoolToColorConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding CheckSymbol}" 
                                       FontSize="20" 
                                       Margin="10,0,0,0"
                                       Foreground="{Binding IsChecked, Converter={StaticResource CheckToColorConverter}}"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding Text}" 
                                       FontSize="12" 
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       Foreground="White"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Grid Grid.Row="2" Margin="10" Background="#FF2D2D2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" 
                    Content="Previous" 
                    Width="70" 
                    Height="30" 
                    Command="{Binding MoveToPreviousPageCommand}"
                    Background="#FF3E3E3E"
                    BorderBrush="#FF3E3E3E"
                    Foreground="White"/>
            
            <TextBlock Grid.Column="1" 
                       Text="{Binding PageInfo}" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="White"/>
            
            <Button Grid.Column="2" 
                    Content="Next" 
                    Width="60" 
                    Height="30" 
                    Command="{Binding MoveToNextPageCommand}"
                    Background="#FF3E3E3E"
                    BorderBrush="#FF3E3E3E"
                    Foreground="White"/>

            <Button Grid.Column="3" 
                    Content="Save" 
                    Width="60" 
                    Height="30" 
                    Command="{Binding SaveCurrentPageCommand}"
                    Background="#FF3E3E3E"
                    BorderBrush="#FF3E3E3E"
                    Foreground="White"/>

            <Button Grid.Column="4" 
                    Content="Save All" 
                    Width="70" 
                    Height="30" 
                    Command="{Binding SaveAllPagesCommand}"
                    Background="#FF3E3E3E"
                    BorderBrush="#FF3E3E3E"
                    Foreground="White"/>
        </Grid>
    </Grid>
</UserControl> 