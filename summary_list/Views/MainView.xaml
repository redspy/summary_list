<UserControl x:Class="summary_list.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:summary_list.Views"
             xmlns:vm="clr-namespace:summary_list.ViewModels"
             xmlns:conv="clr-namespace:summary_list.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <conv:WidthToColumnsConverter x:Key="WidthToColumnsConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Protocol Title -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding CurrentProtocol.Name}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="10" 
                   HorizontalAlignment="Center"/>

        <!-- Groups -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding CurrentProtocol.Groups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <!-- Group Title -->
                            <Border BorderBrush="Gray" 
                                    BorderThickness="0,0,0,1" 
                                    Margin="0,0,0,10" 
                                    Padding="0,0,0,5">
                                <TextBlock Text="{Binding Name}" 
                                         FontSize="18" 
                                         FontWeight="Bold"/>
                            </Border>
                            
                            <!-- Items Grid -->
                            <ItemsControl ItemsSource="{Binding Items}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="200" 
                                                Height="40" 
                                                Margin="5" 
                                                Background="{Binding IsChecked, Converter={StaticResource BoolToColorConverter}}">
                                            <StackPanel Orientation="Horizontal" Margin="5">
                                                <TextBlock Text="{Binding CheckSymbol}" 
                                                         FontSize="20" 
                                                         Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding Text}" 
                                                         VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Navigation Controls -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="10">
            <Button Content="Previous" 
                    Command="{Binding MoveToPreviousPageCommand}" 
                    Margin="0,0,10,0"/>
            <TextBlock Text="{Binding PageInfo}" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
            <Button Content="Next" 
                    Command="{Binding MoveToNextPageCommand}"/>
            <Button Content="Save" 
                    Command="{Binding SaveCurrentPageCommand}" 
                    Margin="10,0,0,0"/>
            <Button Content="Save All" 
                    Command="{Binding SaveAllPagesCommand}" 
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl> 